{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "@id": {
        "type": "string",
        "pattern": "^mip-cmor-tables:/auxillary/realm/\\w+$"
      },
      "@type": {
        "type": "string",
        "const": "cmip:realm"
      },
      "realm:name": {
        "type": "string"
      },
      "realm:description": {
        "type": "string"
      }
    },
    "required": ["@id", "@type", "realm:name", "realm:description"],
    "additionalProperties": false
  }
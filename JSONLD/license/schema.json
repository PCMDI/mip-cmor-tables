{
    "type": "object",
    "properties": {
        "@type": {
            "type": "string",
            "enum": [
                "cmip:license"
            ]
        },
        "@id": {
            "type": "string",
            "pattern": "^mip-cmor-tables:license/.+$"
        },
        "license:kind": {
            "type": "string"
        },
        "license:conditions": {
            "type": "string"
        },
        "license:license_id": {
            "type": "string"
        },
        "license:license_url": {
            "type": "string",
            "format": "uri"
        }
    },
    "required": [
        "@type",
        "@id",
        "license:kind",
        "license:conditions",
        "license:license_id",
        "license:license_url"
    ]
}
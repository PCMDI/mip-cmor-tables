{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "@id": { "type": "string" },
        "@type": { "type": "string", "enum": ["consortium"] },
        "cmip_acronym": { "type": "string" },
        "description": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "changes": { "type": "string" },
        "members": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "@type": { "type": "string", "enum": ["consortia:member"] },
                    "institution": {
                        "type": "object",
                        "properties": {
                            "@id": { "type": "string" }
                        },
                        "required": ["@id"]
                    },
                    "membership_type": { "type": "string" },
                    "dates": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "from": { "type": "integer" },
                                "to": { 
                                    "oneOf": [
                                        { "type": "integer" },
                                        { "type": "string", "enum": ["-"] }
                                    ]
                                },
                                "phase": {
                                    "type": "object",
                                    "properties": {
                                        "@id": { "type": "string" }
                                    },
                                    "required": ["@id"]
                                }
                            },
                            "required": ["from", "to", "phase"]
                        }
                    }
                },
                "required": [ "institution", "membership_type", "dates"]
            }
        }
    },
    "required": ["@id", "@type", "cmip_acronym", "description", "url", "members"]
}
